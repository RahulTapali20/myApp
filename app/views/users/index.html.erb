<h1>Listing Users</h1>

<table cellpadding="5%" cellspacing="10%">
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Date of Birth</th>
    <th>Address</th>
    <th>Email Id</th>
    <th>Mobile No</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.fname %></td>
    <td><%= user.lname %></td>
    <td><%= user.dob %></td>
    <td><%= user.address %></td>
    <td><%= user.email %></td>
    <td><%= user.mobileNo %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

